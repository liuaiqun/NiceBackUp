<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="res_partner_sale_type_form_view">
            <field name="name">res.partner.sale_type.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

               <xpath expr="//field[@name='website']" position="after">
                    <label for="sale_type" string="GST Type Customer" attrs="{'invisible':[('customer', '=', False)]}"/>
                    <div attrs="{'invisible':[('customer', '=', False)]}">
                        <field name="sale_type" domain="[('company_id', '=', company_id), ('object_type', '=', 'sale')]" context="{'default_object_type': 'sale'}" class="oe_inline" attrs="{'required':[('customer', '=', True)]}"/>
                        <field name="sale_sub_type_id" domain="[('type_id', '=', sale_type), ('object_type', '=', 'sale')]" context="{'default_type_id': sale_type}" class="oe_inline" attrs="{'required':[('customer', '=', True)]}"/>
                    </div>
                    <label for="purchase_type" string="GST Type Supplier" attrs="{'invisible':[('supplier', '=', False)]}"/>
                    <div attrs="{'invisible':[('supplier', '=', False)]}">
                        <field name="purchase_type" domain="[('company_id', '=', company_id), ('object_type', '=', 'purchase')]" context="{'default_object_type': 'purchase'}"  class="oe_inline" attrs="{'required':[('supplier', '=', True)]}"/>
                        <field name="purchase_sub_type_id"  domain="[('type_id', '=', purchase_type), ('object_type', '=', 'purchase')]"  context="{'default_type_id': purchase_type}" class="oe_inline" attrs="{'required':[('supplier', '=', True)]}" />
                    </div>
                    <field name="form_sale" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
